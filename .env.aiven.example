# =====================================================
# Scheduling Report System - Environment Configuration
# =====================================================

# Application Configuration
SERVICE_CODE=031
APP_PORT=8080
ENVIRONMENT=development
SERVICE_NAME=scheduling-report

# Database Configuration (MySQL)
DB_TYPE=mysql
DB_HOST=192.168.131.209
DB_PORT=3306
DB_USER=user_arif
DB_PASS=Masarif_2092
DB_NAME=lab

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=console

# =====================================================
# AIVEN KAFKA CONFIGURATION (Managed by Infra Team)
# =====================================================
# Get these credentials from your infrastructure team
# Example: aiven.io console or from infra team's secrets

# Kafka Broker URLs (comma-separated if multiple brokers)
AIVEN_KAFKA_BROKERS=your-project-kafka.aivencloud.com:12345

# Authentication (provided by Aiven)
AIVEN_KAFKA_USERNAME=avnadmin
AIVEN_KAFKA_PASSWORD=your_secure_kafka_password

# TLS/SSL Configuration
KAFKA_TLS_ENABLED=true

# Optional: CA Certificate path (if required by Aiven)
# Usually not needed for Aiven managed Kafka
KAFKA_CA_CERT_PATH=/path/to/ca-certificate.pem

# Kafka Topics (must be created in Aiven console first)
KAFKA_TOPIC_CONFIG_CREATED=config.created
KAFKA_TOPIC_CONFIG_UPDATED=config.updated
KAFKA_TOPIC_CONFIG_DELETED=config.deleted
KAFKA_TOPIC_REPORT_TRIGGERED=report.triggered
KAFKA_TOPIC_REPORT_COMPLETED=report.completed
KAFKA_TOPIC_REPORT_FAILED=report.failed

# Kafka Consumer Group IDs
KAFKA_CONSUMER_GROUP_SCHEDULER=scheduler-group
KAFKA_CONSUMER_GROUP_EXECUTOR=executor-group
KAFKA_CONSUMER_GROUP_LOG=log-group

# =====================================================
# SCHEDULER CONFIGURATION
# =====================================================
SCHEDULER_ENABLED=true
SCHEDULER_POOL_SIZE=5

# =====================================================
# REPORT STORAGE
# =====================================================
REPORT_BASE_PATH=/var/reports/
MAX_FILE_SIZE_MB=100

# File retention (delete reports older than N days)
REPORT_RETENTION_DAYS=30

# =====================================================
# EMAIL CONFIGURATION (SMTP)
# =====================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=reports@company.com
SMTP_PASSWORD=your_smtp_app_password
SMTP_FROM=reports@company.com

# Email settings
EMAIL_ENABLED=true
EMAIL_USE_TLS=true

# =====================================================
# SFTP CONFIGURATION (Default settings)
# =====================================================
# Per-report SFTP configs are stored in database
# These are fallback/default values
SFTP_TIMEOUT_SECONDS=30
SFTP_MAX_RETRY=3

# =====================================================
# MICROSERVICES PORTS (if running separately)
# =====================================================
CONFIG_SERVICE_PORT=8081
LOG_SERVICE_PORT=8082
TRIGGER_SERVICE_PORT=8083
SCHEDULER_SERVICE_PORT=8084
EXECUTOR_SERVICE_PORT=8085

# =====================================================
# MONITORING & HEALTH CHECK
# =====================================================
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=false
METRICS_PORT=9090

# =====================================================
# SECURITY
# =====================================================
# API Key for service-to-service communication (optional)
API_KEY_ENABLED=false
API_KEY=your-secret-api-key

# JWT Authentication (optional)
JWT_ENABLED=false
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRY_HOURS=24

# =====================================================
# DATASOURCE ENCRYPTION
# =====================================================
# Encrypt datasource passwords in database
DATASOURCE_ENCRYPTION_ENABLED=true
DATASOURCE_ENCRYPTION_KEY=your-32-byte-encryption-key-here

# =====================================================
# RATE LIMITING
# =====================================================
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# =====================================================
# DEVELOPMENT / DEBUG
# =====================================================
DEBUG_MODE=true
PRETTY_PRINT_JSON=true

# Disable scheduler in development (manual trigger only)
SCHEDULER_AUTO_START=false